  <div class="row">
    <div class="col-md-12">
      <form action="/forgot" method="POST">
        <legend>Forgotten Password?</legend>
        <div class="form-group">
          <label for="email">Email:</label>
          <input class="form-control" type="email" name="email" id="email" autofocus>
